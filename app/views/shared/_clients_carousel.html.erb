<div class="container hr-carousel-trigger">
	<div class="row text-center marginTop100">
		<div class="col-md-6 col-md-offset-3">
			<h2><span class="light">our</span> clients</h2>
			<hr class="carousel-hr hr-anim-carousel">
		</div>
	</div>
	<div class="row">
		<div class="col-md-10 col-md-offset-1 marginTop50 carousel-anchor">
			<div class="clients-carousel">
				<% clients.each do |client| %>
					<div><%= image_tag client.image.url(:square) %></div>
				<% end %>
			</div>
			<%= image_tag 'carousel-left-arrow.png', class: "carousel-arrow carousel-left-arrow" %>
			<%= image_tag 'carousel-right-arrow.png', class: "carousel-arrow carousel-right-arrow" %>
		</div>
	</div>
</div>