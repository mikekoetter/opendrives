<div id="career-job-opening-section-1">
	<div class="container">
		<div class="row marginTopBottom100">
			<div class="col-md-12 text-center">
				<div class="col-md-8 col-md-offset-2 job-title">
					<%= title_format(@job.job_title) %>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="career-job-opening-section-2">
	<div class="container">
		<div class="row marginTop50">
			<div class="col-md-12">
				<h3 class="text-center"><span class="light">JOB</span> DESCRIPTION</h3>
				<hr class="hr-anim-career-job-section-2">
				<br><br>
				<p><%= @job.job_description.html_safe %></p>
				<br><br>
				<h4 class="text-center"><span class="light">WHAT YOU'LL BE</span> DOING IN THIS JOB...</h4>
				<br><br>
				<p><%= @job.job_description_second.html_safe %></p>
				<br><br>
				<% if @job.essentials.html_safe %>
					<h4 class="text-center high-line trigger-overlay-career-job"><%= @job.essentials_title.html_safe %></h4>
					<br><br>
					<% to_array(@job.essentials).each do |essential| %>
						<div class="col-md-4">
							<div class="check-anchor-div">
								<%= image_tag 'check.png', class: 'check-image' %>
								<div class="mini-overlay-career-job"></div>
							</div>
							<div class="col-xs-10">
								<%= essential.html_safe %>
							</div>
						</div>
						<% end %>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 text-center job-opening-big-border marginTop100">
				<p class="lead">IF THIS SOUNDS LIKE YOU, THEN WE HOPE TO MEET WITH YOU SOON!</p>
			</div>
		</div>
	</div>
</div>

<div id="career-job-opening-section-3">
	<div class="container">
		<div class="row marginTopBottom100">
			<div class="col-md-12">
				<h3 class="text-center"><span class="light">SKILLS &AMP;</span> REQUIREMENTS</h3>
				<hr class="hr-anim-career-job-section-3">
				<br><br>
				<h4 class="text-center high-line"><span class="light">EXPERIENCE, TECHNICAL KNOWLEDGE</span><br> AND OTHER QUALITIES WE'RE LOOKING FOR...</h4>
				<br><br>
				<ul>
					<% to_array(@job.requirements).each do |requirement| %>
						<li><%= requirement.html_safe %></li>
					<% end %>
				</ul>
				<br><br>
				<% if @job.qualities %>
					<h4 class="text-center high-line"><%= @job.qualities_title %></h4>
					<br><br>
					<ul>
						<% to_array(@job.qualities).each do |quality| %>
							<li><%= quality.html_safe %>.</li>
						<% end %>
					</ul>
					<br><br>
				<% end %>
			</div>
			<div class="col-md-12 text-center">
				<%= link_to('SUBMIT RESUME <span class="angle-right-icon">&gt;</span>'.html_safe, "mailto:careers@opendrives.com?subject=#{@job.job_title}", class: 'link-with-border') %>
			</div>
		</div>
	</div>
</div>