<%= render 'admins/back', add: 'A NEW JOB', link: new_job_path %>
<div id="admin-jobs-index">
	

	<div class=" text-center marginTop100">
		<% @jobs.each do |job| %>
			<div class="col-sm-4 col-xs-6 text-center">
				<div class="career-logo-div">
					
					<%= link_to(image_tag(job.image.url, class: 'career-logo'), '#', data: { toggle: 'modal', target: '#modal-icons' }) %>
					
				</div>
				<br><br>
				<p><strong><%= job.job_title %></strong></p>
				<br><br>
				<%= link_to 'show', job_path(job.id), class: "btn btn-info" %>
				<%= link_to 'Edit', edit_job_path(job.id), class: "btn btn-primary" %>
				<%= link_to 'DELETE', { controller: 'jobs', action: 'destroy', id: job.id }, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger' %>
				<div class="col-md-12 marginTop20">
					<%= link_to 'Make It Visible', '', class: "btn btn-warning" %>
				</div>
			</div>
		<% end %>
	</div>



	<div id="modal-icons" class="modal fade" role="dialog">
	  <div class="modal-dialog modal-lg">

	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal">&times;</button>
	        <h4 class="modal-title text-center">CHOOSE AN ICON</h4>
	      </div>
	      <div class="modal-body">
	        <%= render 'icons/icons', icons: @icons %>
	      </div>
	    </div>

	  </div>
	</div>
</div>