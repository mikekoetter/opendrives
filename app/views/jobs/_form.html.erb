<div class="form-admin container">
  <%= simple_form_for(@job, multipart: true,  html: { class: "form-horizontal" }, remote: false) do |f| %>
    <fieldset>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.input :job_title, label: false, placeholder: 'Job Title', input_html: { class: 'form-control' } %>
        </div>
        <div class="col-sm-6">
           <%= f.input :job_description, as: :text, rows: 10,  label: false, placeholder: 'Job description 1', input_html: { class: 'form-control' } %>
        </div>
        <div class="col-sm-6">
          <%= f.input :job_description_second, as: :text, rows: 10, label: false, placeholder: 'Job Description 2', input_html: { class: 'form-control' } %>
        </div>
     
        <div class="col-sm-12">
          <%= f.input :essentials_title, label: false, placeholder: 'Essentials Title',  input_html: { class: 'form-control' } %>
        </div>
        <div class="col-sm-12">
          <%= f.input :essentials, as: :text, rows: 10, label: false, placeholder: 'Essentials',  input_html: { class: 'form-control' } %>
        </div>
      
        <div class="col-sm-12">
          <%= f.input :requirements, as: :text, rows: 10, label: false, placeholder: 'Requirements',  input_html: { class: 'form-control' } %>
        </div>
      
        <div class="col-sm-12">
          <%= f.input :qualities_title, label: false, placeholder: 'Qualities Title',  input_html: { class: 'form-control' } %>
        </div>
        <div class="col-sm-12">
          <%= f.input :qualities, as: :text, rows: 10, label: false, placeholder: 'Qualities',  input_html: { class: 'form-control' } %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-6">
         choose existing one:

        </div>
        <div class="col-sm-6">
          <%= f.file_field :image, label: false,  input_html: { class: 'form-control' } %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12 marginTop20 text-center">
        	<%= button_tag('SUBMIT <span class="angle-right-icon">&gt;</span>'.html_safe, type: 'submit', class: 'link-with-border hvr-shutter-out-horizontal') %>
          <div class="loader"></div>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
