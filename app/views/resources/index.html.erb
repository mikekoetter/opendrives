</section>

<section id="resources-section-3">
	<div class="container">
		<div class="row marginTopBottom100">
			<div class="col-md-12 text-center">
				<h3><span class="light">CONTACT US OR FILL OUT THE SUPPORT REQUEST FORM AND ONE OF OUR</span> SPECIALIST WILL CONTACT YOU TO RESOLVE YOUR ISSUE AS SOON AS POSSIBLE.*</h3>
				<hr class="hr-anim-resources-form">
				<br>
				<p>*During standard business hours.</p>
			</div>
			<div class="col-md-12 marginTop50">
				<%= form_tag(send_email_path, method: "post", :class=>"form-horizontal") do %>
          <fieldset>

            <div class="form-group">
              <div class="col-sm-4">
                <input id="first-name" name="first-name" type="text" placeholder="*FIRST NAME" class="form-control" required>
              </div>
              <div class="col-sm-4">
                <input id="last-name" name="last-name" type="text" placeholder="*LAST NAME" class="form-control" required>
              </div>
              <div class="col-sm-4">
                <input id="company-name" name="company-name" type="text" placeholder="COMPANY NAME" class="form-control">
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-6">
                <input id="email" name="email" type="text" placeholder="*WORK EMAIL" class="form-control" required>
              </div>
              <div class="col-sm-6">
                <input id="phone" name="phone" type="tel" placeholder="PHONE NUMBER" class="form-control">
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <textarea class="form-control " id="message" name="message" placeholder="ISSUE DESCRIPTION" rows="10"></textarea>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 marginTop20 text-center">
              	<%= button_tag((fa_icon 'angle-right', text: 'SUBMIT', right: true), type: 'submit', class: 'link-with-border hvr-shutter-out-horizontal') %>
                
              </div>
            </div>
          </fieldset>
         <% end %>
			</div>
		</div>
	</div>
</section>

