			</div>

			<%= link_to 'tel:+18887785491' do %>
				<div class="col-xs-4 resources-contact-div text-center black marginTop50 hvr-sweep-to-right">
					+1 (888) 778-5491<br class="hide-in-desktop"><%= image_tag 'contact-phone-logo.png', class: 'resources-contact-logo' %>
				</div>
			<% end %>

			<%= link_to 'mailto:support@opendrives.com' do %>
				<div class="col-xs-4 resources-contact-div text-center blue marginTop50 hvr-sweep-to-right">
					SUPPORT@OPENDRIVES.COM<br class="hide-in-desktop"><%= image_tag 'contact-mail-white-logo.png', class: 'resources-contact-logo' %>
				</div>
