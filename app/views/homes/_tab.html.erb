<div id="tab-<%= id %>" class="trigger-overlay tab-pane fade <%= 'in active' if id == 'avalanche' %>">
	<div class="col-md-6 col-md-offset-1 marginTop50">
		<h4><%= title.html_safe %></h4>
		<br class="hide-in-1200">
		<p class="border-left lead">
			<%= body %>
			<span class="border-overlay"></span>
		</p>
	</div>
	<div class="col-md-4 col-xs-12 marginTop50">
		<h4>SPECS:</h4>
		<br><br class="hide-in-desktop"><br class="hide-in-desktop">
		<div class="row pull-up">
			<div class="col-sm-2 col-xs-2">
				<%= image_tag 'check.png', class: 'check-image' %>
				<div class="mini-overlay"></div>
			</div>
			<div class="col-sm-10 col-xs-8">
				<p>CAPACITY: <%= capacity %></p>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-2 col-xs-2">
				<%= image_tag 'check.png', class: 'check-image' %>
				<div class="mini-overlay"></div>
			</div>
			<div class="col-sm-10 col-xs-8">
				<p>HARD DRIVE SIZE: <%= hd_size %></p>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-2 col-xs-2">
				<%= image_tag 'check.png', class: 'check-image' %>
				<div class="mini-overlay"></div>
			</div>
			<div class="col-sm-10 col-xs-8">
				<p>CPU: 12 CORE INTEL XEON</p>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-md-offset-3 text-center marginTop20">
		<%= link_to('LEARN MORE &nbsp;&nbsp;<span class="plus-icon">+</span>'.html_safe, link, class: 'link-with-border hvr-shutter-out-horizontal') %>
	</div>
</div>

