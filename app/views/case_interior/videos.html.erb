<div id="videos-section-1">
	<div class="container">
		<div class="row marginTopBottom100">
			<div class="col-md-12 text-center">
				<div class="col-md-6 col-md-offset-3 job-title">
					<h3>VIDEOS</h3>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="videos-section-2">
	<div class="container">
		<div class="row text-center marginTopBottom100">
			<div class="col-md-6">
				<h4 class="house-cards-div">OpenDrives,<br><span class="light">powered by intel</span></h4>
				<br><br>
				<div class="video-thumb-anchor">
					<%= link_to '', data: { toggle: 'modal', target: '#modal-house-cards' } do %>
						<%= image_tag 'resources-houseofcards.png', class: 'video-thumb' %>
						<%= image_tag 'resources-videos-logo.png', class: 'logo-play' %>
					<% end %>
				</div>
				<br><br><br class="hide-in-mobile"><br class="hide-in-mobile">
				<%= link_to('watch now <span class="plus-icon">+</span>'.html_safe, '', data: { toggle: 'modal', target: '#modal-house-cards' }, class: 'link-with-border hvr-shutter-out-horizontal') %>
			</div>
			<div class="col-md-6">
				<h4>OpenDrives delivers<br><span class="light">high performance on deadpool</span></h4>
				<br><br>
				<div class="video-thumb-anchor">
					<%= link_to '', data: { toggle: 'modal', target: '#modal-deadpool' } do %>
						<%= image_tag 'resources-deadpool.png', class: 'video-thumb' %>
						<%= image_tag 'resources-videos-logo.png', class: 'logo-play logo-play-dead' %>
					<% end %>
				</div>
				<br><br><br class="hide-in-mobile"><br class="hide-in-mobile">
				<%= link_to('watch now  <span class="plus-icon">+</span>'.html_safe, '', data: { toggle: 'modal', target: '#modal-deadpool' }, class: 'link-with-border hvr-shutter-out-horizontal') %>
			</div>
		</div>
	</div>
</div>

<div id="modal-house-cards" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <iframe width="560" height="315" src="https://www.youtube.com/embed/p5RNOK5NuSM?rel=0&amp;controls=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>

<div id="modal-deadpool" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <iframe width="560" height="315" src="https://www.youtube.com/embed/BELaZoVldwI?rel=0&amp;controls=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>

